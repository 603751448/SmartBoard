<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fragment_gray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white_text"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/student_background_btn"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:background="@drawable/person_background" />

        <ImageView
            android:layout_width="240px"
            android:layout_height="240px"
            android:id="@+id/head_sculpture"
            android:layout_gravity="center"
            android:src="@drawable/head_sculpture2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"></ImageView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/background_fragment_gray" />

    <RelativeLayout
        android:id="@+id/nickname_layout"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_color_ffffff"
        android:padding="8dip" >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/nickname"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dip"
            android:text="昵称"
            android:textColor="@color/black_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="输入您的名字"
            android:textColor="@color/gray_text"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/background_fragment_gray" />


    <RelativeLayout
        android:id="@+id/personalized_signature_layout"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_color_ffffff"
        android:padding="8dip" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@drawable/signature"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dip"
            android:text="个性签名"
            android:textColor="@color/black_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_personalized_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="你的个性签名"
            android:textColor="@color/gray_text"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/background_fragment_gray" />

    <RelativeLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_color_ffffff"
        android:padding="8dip" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/history_picture"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dip"
            android:text="历史记录"
            android:textColor="@color/black_text"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/background_fragment_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_color_ffffff"
        android:padding="8dip" >
        <ImageView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:background="@drawable/meeting_pictures"/>

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dip"
            android:text="会议概图"
            android:textColor="@color/black_text"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/background_fragment_gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_color_ffffff"
        android:padding="8dip" >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:background="@drawable/ourinfo"/>

        <TextView
            android:id="@+id/tv_about_we"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dip"
            android:text="关于我们"
            android:textColor="@color/black_text"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
